# top-most EditorConfig file
root = true

# Windows-style newlines with a newline ending every file
[*]
end_of_line = crlf
insert_final_newline = true

# Set default charset
[*.cs]
charset = utf-8

# 4 space indentation for code files
indent_style = space
indent_size = 4

# Remove whitespace after line
trim_trailing_whitespace = true

# 2 space indentation for project and JSON files
[*.{csproj,json}]
indent_style = space
indent_size = 2
